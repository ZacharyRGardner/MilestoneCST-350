@model IEnumerable<MilestoneCST_350.Models.ButtonModel>

<style>
    .game-button-image {
        width: 50px;
    }

    .game-button {
    }

    .button-zone {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0px;
    }
</style>

@{
    string[] images = { "orange.png", "blue.png", "flag.png", "red.png" };

    //string[] buttonText = { "", "Flag", "Bomb" };

}
<h1>Play Minesweeper</h1>
<form>
    <div class="button-zone">


        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i % 10 == 0)
            {
                <div class="line-break">
                </div>
            }

            <button class="game-button" name="buttonId" value="@Model.ElementAt(i).Id" type="submit" asp-controller="Game" asp-action="HandleButtonClick">
                <img class="game-button-image" src="~/img/@images[Model.ElementAt(i).State]" />
            </button>
        }
    </div>
</form>
